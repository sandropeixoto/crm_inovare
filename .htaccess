# ==============================================================
# üîß CONFIGURA√á√ïES DE DEBUG E LOG PHP
# ==============================================================

# Exibir erros PHP no navegador (somente para ambiente de desenvolvimento)
php_flag display_errors On
php_flag display_startup_errors On
php_value error_reporting 32767

# Registrar erros PHP em log (certifique-se de que a pasta existe e tem permiss√£o)
php_flag log_errors On
php_value error_log /var/log/apache2/php_errors.log

# ==============================================================
# üö´ CONTROLE DE CACHE HTTP (√∫til durante desenvolvimento)
# ==============================================================

<IfModule mod_headers.c>
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</IfModule>

# ==============================================================
# üåê CONFIGURA√á√ïES DE SEGURAN√áA E CORS
# ==============================================================

<IfModule mod_headers.c>
    # Permitir acesso de qualquer origem (CORS)
    Header set Access-Control-Allow-Origin "*"

    # Evitar que o site seja exibido dentro de iframes externos
    Header always set X-Frame-Options "SAMEORIGIN"

    # Outras boas pr√°ticas de seguran√ßa (opcionais)
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# ==============================================================
# üìÅ REGRAS DE REWRITE (se usar URLs amig√°veis)
# ==============================================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /inovare/

    # Exemplo: redirecionar tudo para public/
    # (Descomente se estiver usando index dentro de /public)
    # RewriteCond %{REQUEST_FILENAME} !-f
    # RewriteCond %{REQUEST_FILENAME} !-d
    # RewriteRule ^(.*)$ public/$1 [L,QSA]
</IfModule>
